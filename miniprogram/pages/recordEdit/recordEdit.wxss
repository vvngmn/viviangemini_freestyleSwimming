/* pages/recordEdit/recordEdit.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-arrow {
  font-size: 36rpx;
  color: #4CAF50;
  font-weight: bold;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.header-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.save-btn {
  background-color: #4CAF50;
}

.action-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

.edit-section {
  flex: 1;
  padding: 40rpx;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.edit-textarea {
  width: 100%;
  min-height: 400rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  resize: none;
  background-color: #fafafa;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

 