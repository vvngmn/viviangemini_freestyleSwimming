.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 0;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.actions {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  padding: 15rpx 30rpx;
  border-radius: 25rpx;
  transition: all 0.3s;
}

.action-btn:active {
  transform: scale(0.95);
}

.clear-btn {
  background-color: #ff6b6b;
}

.share-btn {
  background-color: #39b54a;
}

.action-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.collected-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.collected-item {
  background-color: white;
  border-radius: 20rpx;
  padding: 25rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s;
}

.collected-item:active {
  transform: scale(0.98);
}

.item-icon {
  font-size: 40rpx;
  margin-right: 25rpx;
  width: 60rpx;
  text-align: center;
}

.item-content {
  flex: 1;
  margin-right: 20rpx;
}

.item-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  word-wrap: break-word;
  line-height: 1.4;
}

.record-count {
  font-size: 20rpx;
  color: #4CAF50;
  font-weight: bold;
  background-color: #e8f5e8;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  margin-left: 8rpx;
}

.item-subtitle {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.item-summary {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-wrap: break-word;
}

.item-type {
  display: block;
  font-size: 22rpx;
  color: #39b54a;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.item-time {
  display: block;
  font-size: 20rpx;
  color: #999;
}

.item-actions {
  display: flex;
  gap: 8rpx;
}

.action-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f0f0f0;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.collect-btn.collected {
  background-color: #4CAF50;
}

.collect-btn.collected .action-icon {
  color: #fff;
}

.share-btn {
  background-color: #f0f0f0;
}

.action-icon {
  font-size: 24rpx;
  color: #666;
}

/* 顶部操作按钮样式 */
.actions .action-btn {
  width: auto;
  height: auto;
  padding: 15rpx 30rpx;
  border-radius: 25rpx;
  background-color: #ff6b6b;
}

.actions .share-btn {
  background-color: #39b54a;
}

.actions .action-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.empty-state {
  text-align: center;
  padding: 100rpx 50rpx;
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.empty-subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}
