.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.content-block {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.block-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  background-color: #fafafa;
}

.block-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.tips-list {
  padding: 20rpx;
}

.tip-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.tip-item:active {
  transform: scale(0.98);
}

.tip-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.tip-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
  width: 50rpx;
  text-align: center;
}

.tip-info {
  flex: 1;
}

.tip-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
  line-height: 1.4;
}

.tip-summary {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.tip-actions {
  display: flex;
  gap: 8rpx;
}

.action-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f0f0f0;
  transition: all 0.3s ease;
}

.action-btn.collected {
  background-color: #4CAF50;
}

.action-btn.collected .action-icon {
  color: #fff;
}

.action-icon {
  font-size: 24rpx;
  color: #666;
}

.action-btn:active {
  transform: scale(0.95);
}

.more-btn {
  padding: 20rpx;
  text-align: center;
  background-color: #f5f5f5;
  border-top: 1rpx solid #e0e0e0;
}

.more-text {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 30rpx;
  background-color: #e0e0e0;
  border-radius: 20rpx;
  display: inline-block;
}

.records-list {
  padding: 20rpx;
}

.record-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.record-content {
  flex: 1;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  transition: all 0.3s ease;
}

.record-content:active {
  transform: scale(0.98);
}

.record-actions {
  display: flex;
  gap: 8rpx;
}

.record-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.record-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-count {
  font-size: 20rpx;
  color: #4CAF50;
  font-weight: bold;
}

.empty-records {
  padding: 40rpx 20rpx;
  text-align: center;
}

/* 推荐文章样式 */
.articles-list {
  padding: 20rpx;
}

.article-item {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  transition: all 0.3s ease;
}

.article-item:active {
  transform: scale(0.98);
}

.article-content {
  flex: 1;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}

.article-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.article-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.article-actions {
  display: flex;
  gap: 8rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.article-item {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.thumbnail {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

.article-info {
  flex: 1;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 40rpx;
}
