.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-arrow {
  font-size: 36rpx;
  color: #4CAF50;
  font-weight: bold;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f0f0f0;
  transition: all 0.3s ease;
}

.action-btn.collected {
  background-color: #4CAF50;
}

.action-btn.collected .action-icon {
  color: #fff;
}

.action-icon {
  font-size: 28rpx;
  color: #666;
}

.share-btn {
  background-color: #f0f0f0;
}

.level-info {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.level-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.progress-overview {
  text-align: center;
}

.progress-text {
  display: block;
  font-size: 28rpx;
  color: #39b54a;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.progress-fill {
  height: 100%;
  background-color: #39b54a;
  border-radius: 6rpx;
  transition: width 0.3s;
}

.progress-stats {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.training-plans {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.plan-section {
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.plan-header {
  background-color: #39b54a;
  color: white;
  padding: 25rpx 30rpx;
  display: flex;
  align-items: center;
}

.plan-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.plan-title {
  font-size: 30rpx;
  font-weight: bold;
}

.training-items {
  padding: 20rpx;
}

.training-item {
  border: 2rpx solid #f0f0f0;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.training-item:last-child {
  margin-bottom: 0;
}

.training-item.completed {
  border-color: #28a745;
  background-color: #f8fff8;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.item-status {
  text-align: right;
  min-width: 200rpx;
}

.session-info {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.item-progress {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.item-progress-bar {
  width: 80rpx;
  height: 6rpx;
  background-color: #f0f0f0;
  border-radius: 3rpx;
  overflow: hidden;
}

.item-progress-fill {
  height: 100%;
  background-color: #39b54a;
  border-radius: 3rpx;
  transition: width 0.3s;
}

.item-progress-text {
  font-size: 22rpx;
  color: #39b54a;
  font-weight: bold;
}

.item-description {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.completed-sessions {
  margin-bottom: 20rpx;
}

.sessions-title {
  display: block;
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.session-list {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15rpx;
  margin-top: 15rpx;
}

.session-item {
  background-color: #e8f5e8;
  border-radius: 8rpx;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.session-number {
  font-size: 24rpx;
  color: #28a745;
  font-weight: bold;
}

.session-date {
  font-size: 20rpx;
  color: #666;
}

.item-actions {
  display: flex;
  gap: 15rpx;
  justify-content: center;
  margin-top: 20rpx;
}

.action-btn {
  background-color: #39b54a;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  transition: all 0.3s;
  min-width: 160rpx;
  white-space: nowrap;
}

.action-btn:active {
  transform: scale(0.95);
}

.complete-btn.completed {
  background-color: #28a745;
}

.complete-btn[disabled] {
  background-color: #28a745;
  opacity: 1;
}

.undo-btn {
  background-color: #ff9800;
  color: white;
} 